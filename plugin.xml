<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
    <extension point="org.datanucleus.store_manager">
        <store-manager class-name="org.datanucleus.store.json.JsonStoreManager" key="json" url-key="json"/>
        <store-manager class-name="org.datanucleus.store.json.AmazonS3StoreManager" key="amazons3" url-key="amazons3"/>
        <store-manager class-name="org.datanucleus.store.json.GoogleStorageStoreManager" key="googlestorage" url-key="googlestorage"/>
    </extension>

    <extension point="org.datanucleus.store_connectionfactory">
        <connectionfactory name="json/tx" class-name="org.datanucleus.store.json.ConnectionFactoryImpl"
            datastore="json" transactional="true"/>
        <connectionfactory name="json/nontx" class-name="org.datanucleus.store.json.ConnectionFactoryImpl"
            datastore="json" transactional="false"/>
        <connectionfactory name="amazons3/tx" class-name="org.datanucleus.store.json.ConnectionFactoryImpl"
            datastore="amazons3" transactional="true"/>
        <connectionfactory name="amazons3/nontx" class-name="org.datanucleus.store.json.ConnectionFactoryImpl"
            datastore="amazons3" transactional="false"/>
        <connectionfactory name="googlestorage/nontx" class-name="org.datanucleus.store.json.ConnectionFactoryImpl"
            datastore="googlestorage" transactional="false"/>
        <connectionfactory name="googlestorage/nontx" class-name="org.datanucleus.store.json.ConnectionFactoryImpl"
            datastore="googlestorage" transactional="true">
        </connectionfactory>
    </extension>

    <extension point="org.datanucleus.store_query_query">
        <query class-name="org.datanucleus.store.json.query.JDOQLQuery" datastore="json" name="JDOQL"/>
        <query class-name="org.datanucleus.store.json.query.JPQLQuery" datastore="json" name="JPQL"/>
        <query class-name="org.datanucleus.store.json.query.JDOQLQuery" datastore="amazons3" name="JDOQL"/>
        <query class-name="org.datanucleus.store.json.query.JPQLQuery" datastore="amazons3" name="JPQL"/>
        <query class-name="org.datanucleus.store.json.query.JDOQLQuery" datastore="googlestorage" name="JDOQL"/>
        <query class-name="org.datanucleus.store.json.query.JPQLQuery" datastore="googlestorage" name="JPQL"/>
    </extension>

    <extension point="org.datanucleus.persistence_properties">
        <persistence-property name="datanucleus.cloud.storage.bucket"/>
    </extension>
</plugin>